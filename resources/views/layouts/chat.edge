<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title></title>
  {{ style('main') }}
</head>
<body>

  @set('username', request.input('username'))

  <div class="chat-container">
    <div class="chat-wrapper">
      @if(username)
        <div class="header">
          <h2>
            <span>Oi  {{ username }}!</span>
            <span class="connected-users"></span>
            <span class="connection-status"></span>
          </h2>
        </div>
        <div class="messages">
        </div>
        <div class="input-wrapper">
          <input type="text" id="message" placeholder="Escreva sua mensagem aqui  " autofocus=1>
        </div>
      @else
        <div class="onboard">
          <form action="/home" method="GET">
            <input type="text" id="name" name="username" placeholder="coloque seu nome" autofocus=1>
          </form>
        </div>
      @endif
    </div>
  </div>

  <script>
    window.username = '{{ username }}'
  </script>

  {{ script('https://cdnjs.cloudflare.com/ajax/libs/babel-polyfill/6.26.0/polyfill.min.js') }}
  {{ script('https://unpkg.com/@adonisjs/websocket-client@1.0.9/dist/Ws.browser.js') }}
  {{ script('https://unpkg.com/jquery@3.3.1/dist/jquery.js') }}
  {{ script('chat.js') }}
</body>
</html>